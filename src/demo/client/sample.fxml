<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="demo.client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <ProgressIndicator fx:id="progressIndicator" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button fx:id="toggleBtn" onAction="#onToggleBtnClick" GridPane.rowIndex="0" GridPane.columnIndex="1">START</Button>
    <Label fx:id="statusLabel" GridPane.rowIndex="1" GridPane.columnIndex="0">Pronto para executar</Label>
</GridPane>